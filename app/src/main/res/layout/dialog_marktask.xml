<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:padding="10dp"
    >
    <TextView
        style="@style/dialogTitleDefault"
        android:text="Mark Task"
        />
    <TextView
        style="@style/dialogContent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Marking task \n&quot;Kumpul Tugas DP&quot;?"/>
    <TextView
        style="@style/dialogContentNote"
        android:text="Please mark the task as success if the task is completed successfully, or mark the task as failed otherwise."/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            style="@style/dialogButtonGreen"
            android:text="Success"
            android:layout_marginRight="10dp"/>
        <Button
            style="@style/dialogButtonRed"
            android:text="Failed"
            android:layout_marginRight="10dp"/>
        <Button
            style="@style/dialogButtonBlue"
            android:text="Cancel"/>

    </LinearLayout>

</LinearLayout>