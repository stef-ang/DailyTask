<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:padding="10dp"
    >
    <TextView
        style="@style/dialogTitleDefault"
        android:text="Delete Task"
        />
    <TextView
        style="@style/dialogContent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Are you sure you want to delete the task\n&quot;Kumpul Tugas DP&quot;?"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            style="@style/dialogButtonRed"
            android:text="Yes, delte the task"
            android:layout_marginRight="30dp"/>
        <Button
            style="@style/dialogButtonBlue"
            android:text="No"/>
    </LinearLayout>

</LinearLayout>