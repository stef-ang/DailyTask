<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonBlueDefault">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>
    <style name="dialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="dialogButtonRed" parent="@style/dialogButton">
        <item name="android:background">#ff0000</item>
    </style>
    <style name="dialogButtonBlue" parent="@style/dialogButton">
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>
    <style name="dialogButtonGreen" parent="@style/dialogButton">
        <item name="android:background">@android:color/holo_green_light</item>
    </style>
</resources>